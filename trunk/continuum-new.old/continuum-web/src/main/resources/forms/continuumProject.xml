<form>
  <id>continuumProject</id>
  <source-role>org.codehaus.continuum.Continuum</source-role>
  <lookup-expression>getProject(#id)</lookup-expression>
  <summary-collection-expression>getProjects()</summary-collection-expression>
  <key-expression>id</key-expression>
  <elements>
    <element>
      <id>addProject.scmUrl</id>
      <validator>default</validator>
      <message-key>addProject.scmUrl.message</message-key>
      <label-key>addProject.scmUrl.label</label-key>
      <error-message-key>addProject.scmUrl.error</error-message-key>
      <type>text</type>
      <expression>scmUrl</expression>
    </element>
    <element>
      <id>addProject.name</id>
      <validator>default</validator>
      <message-key>addProject.name.message</message-key>
      <label-key>addProject.name.label</label-key>
      <error-message-key>addProject.name.error</error-message-key>
      <type>text</type>
      <expression>name</expression>
    </element>
    <element>
      <id>addProject.nagEmailAddress</id>
      <validator>default</validator>
      <message-key>addProject.nagEmailAddress.message</message-key>
      <label-key>addProject.nagEmailAddress.label</label-key>
      <error-message-key>addProject.nagEmailAddress.error</error-message-key>
      <type>text</type>
      <expression>nagEmailAddress</expression>
    </element>
    <element>
      <id>addProject.version</id>
      <validator>default</validator>
      <message-key>addProject.version.message</message-key>
      <label-key>addProject.version.label</label-key>
      <error-message-key>addProject.version.error</error-message-key>
      <type>text</type>
      <expression>version</expression>
    </element>
    <element>
      <id>addAntProject.executable</id>
      <validator>default</validator>
      <message-key>addAntProject.executable.message</message-key>
      <label-key>addAntProject.executable.label</label-key>
      <error-message-key>addAntProject.executable.error</error-message-key>
      <type>text</type>
    </element>
    <element>
      <id>addAntProject.targets</id>
      <validator>default</validator>
      <message-key>addAntProject.targets.message</message-key>
      <label-key>addAntProject.targets.label</label-key>
      <error-message-key>addAntProject.targets.error</error-message-key>
      <type>text</type>
    </element>
    <element>
      <id>continuumProject.type</id>
      <validator>default</validator>
      <message-key>continuumProject.type.message</message-key>
      <label-key>continuumProject.type.label</label-key>
      <error-message-key>continuumProject.type.error</error-message-key>
      <type>text</type>
      <expression>builderId</expression>
    </element>
  </elements>

  <!-- Add -->
  <add>
    <title-key>addAntProject.title</title-key>
    <action>addAntProject</action>
    <view>continuumProject.form?mode=summary</view>
  </add>

  <!-- Update -->
  <update>
    <title-key>addAntProject.title</title-key>
    <action>updateProject</action>
    <view>continuumProject.form?mode=summary</view>
  </update>

  <!-- View -->
  <view>
    <title-key>viewAntProject.title</title-key>
  </view>

  <!-- Summary -->
  <summary>
    <title-key>title.key</title-key>
    <summary-elements>
      <summary-element>
        <id>addProject.name</id>
      </summary-element>
      <summary-element>
        <id>continuumProject.type</id>
      </summary-element>
    </summary-elements>
    <operations>
      <operation>
        <name>View</name>
        <action>target/$formId$.form?mode=view&amp;id=$id$</action>
      </operation>
      <operation>
        <name>Details</name>
        <action>target/$formId$.form?mode=update&amp;id=$id$</action>
      </operation>
      <operation>
        <name>Delete</name>
        <action>delete</action>
      </operation>
    </operations>
  </summary>
</form>
