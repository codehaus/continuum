<component-set>
  <components>
    <component>
      <role>org.codehaus.continuum.builder.ContinuumBuilder</role>
      <role-hint>maven</role-hint>
      <implementation>org.codehaus.continuum.builder.shell.MavenContinuumBuilder</implementation>
      <requirements>
        <requirement>
          <role>org.codehaus.continuum.scm.ContinuumScm</role>
        </requirement>
        <requirement>
          <role>org.apache.maven.Maven</role>
        </requirement>
      </requirements>
      <configuration>
        <shell-command>maven pom:install jar:install</shell-command>
      </configuration>
    </component>
  </components>
</component-set>
