<plexus>

  <components>

    <component>
      <role>org.codehaus.plexus.continuum.network.ConnectionFactory</role>
      <implementation>org.codehaus.plexus.continuum.network.SimpleServerSocketConnectionFactory</implementation>

      <requirements>
        <requirement>
          <role>org.codehaus.plexus.continuum.network.ConnectionConsumer</role>
        </requirement>
      </requirements>

      <configuration>
        <port>6789</port>
      </configuration>

    </component>

    <component>
      <role>org.codehaus.plexus.continuum.network.ConnectionConsumer</role>
      <implementation>org.codehaus.plexus.continuum.network.EchoingConnectionConsumer</implementation>
    </component>

  </components>

</plexus>
