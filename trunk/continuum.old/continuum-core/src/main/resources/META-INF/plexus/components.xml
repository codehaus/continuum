<component-set>
  <components>
    <component>
      <role>org.codehaus.continuum.Continuum</role>
      <implementation>org.codehaus.continuum.DefaultContinuum</implementation>
      <requirements>
        <requirement>
          <role>org.codehaus.continuum.buildqueue.BuildQueue</role>
        </requirement>
        <requirement>
          <role>org.codehaus.continuum.store.ContinuumStore</role>
        </requirement>
        <requirement>
          <role>org.codehaus.continuum.builder.ContinuumBuilder</role>
          <role-hint>maven2</role-hint>
        </requirement>
      </requirements>
    </component>

    <component>
      <role>org.codehaus.continuum.network.ConnectionFactory</role>
      <role-hint>simple-network-registrar-server</role-hint>
      <implementation>org.codehaus.continuum.network.SimpleServerSocketConnectionFactory</implementation>
      <requirements>
        <requirement>
          <role>org.codehaus.continuum.network.ConnectionConsumer</role>
          <role-hint>simple-network-registrar</role-hint>
        </requirement>
      </requirements>
      <configuration>
        <port>6789</port>
      </configuration>
    </component>

    <component>
      <role>org.codehaus.continuum.network.ConnectionFactory</role>
      <role-hint>simple-network-trigger-server</role-hint>
      <implementation>org.codehaus.continuum.network.SimpleServerSocketConnectionFactory</implementation>
      <requirements>
        <requirement>
          <role>org.codehaus.continuum.network.ConnectionConsumer</role>
          <role-hint>simple-network-trigger</role-hint>
        </requirement>
      </requirements>
      <configuration>
        <port>7890</port>
      </configuration>
    </component>

    <component>
      <role>org.codehaus.continuum.network.ConnectionConsumer</role>
      <role-hint>simple-network-registrar</role-hint>
      <implementation>org.codehaus.continuum.registration.network.SimpleNetworkRegistrar</implementation>
      <requirements>
        <requirement>
          <role>org.codehaus.continuum.Continuum</role>
        </requirement>
      </requirements>
    </component>

    <component>
      <role>org.codehaus.continuum.network.ConnectionConsumer</role>
      <role-hint>simple-network-trigger</role-hint>
      <implementation>org.codehaus.continuum.trigger.network.SimpleNetworkTrigger</implementation>
      <requirements>
        <requirement>
          <role>org.codehaus.continuum.Continuum</role>
        </requirement>
      </requirements>
    </component>

    <component>
      <role>org.codehaus.continuum.builder.ContinuumBuilder</role>
      <role-hint>maven2</role-hint>
      <implementation>org.codehaus.continuum.builder.maven2.Maven2ContinuumBuilder</implementation>
      <requirements>
        <requirement>
          <role>org.codehaus.continuum.notification.ContinuumNotifier</role>
        </requirement>
        <requirement>
          <role>org.codehaus.continuum.scm.ContinuumScm</role>
        </requirement>
        <requirement>
          <role>org.codehaus.continuum.store.ContinuumStore</role>
        </requirement>
        <requirement>
          <role>org.apache.maven.Maven</role>
        </requirement>
      </requirements>
      <configuration>
        <maven-home>${maven.home}/</maven-home>
        <maven-local-repository>${maven.home}/repository</maven-local-repository>
      </configuration>
    </component>
    <component>
      <role>org.codehaus.continuum.scm.ContinuumScm</role>
      <implementation>org.codehaus.continuum.scm.DefaultContinuumScm</implementation>
      <requirements>
        <requirement>
          <role>org.apache.maven.scm.manager.ScmManager</role>
        </requirement>
      </requirements>
      <configuration>
        <!-- @TODO: change this to ${continuum.checkout} -->
        <checkout-directory>/tmp/continuum</checkout-directory>
      </configuration>
    </component>
    <component>
      <role>org.codehaus.continuum.buildqueue.BuildQueue</role>
      <implementation>org.codehaus.continuum.buildqueue.SimpleBuildQueue</implementation>
    </component>
    <component>
      <role>org.codehaus.continuum.notification.ContinuumNotifier</role>
      <implementation>org.codehaus.continuum.notification.console.ConsoleNotifier</implementation>
    </component>
    <component>
      <role>org.codehaus.continuum.store.ContinuumStore</role>
      <implementation>org.codehaus.continuum.store.MemoryContinuumStore</implementation>
    </component>
  </components>
</component-set>
