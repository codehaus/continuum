<form>
  <id>issue</id>
  <title-key>issue.title</title-key>
  <action>addIssue</action>
  <view>Issue.vm</view>
  <elements>
    <element>
      <id>issue.summary</id>
      <validator>default</validator>
      <message-key>issue.summary.message</message-key>
      <label-key>issue.summary.label</label-key>
      <error-message-key>issue.summary.error</error-message-key>
      <type>text</type>
    </element>
    <element>
      <id>issue.detail</id>
      <validator>default</validator>
      <message-key>issue.detail.message</message-key>
      <label-key>issue.detail.label</label-key>
      <error-message-key>issue.detail.error</error-message-key>
      <type>text</type>
    </element>
  </elements>
</form>
