<component-set>
  <components>
    <component>
      <role>org.codehaus.continuum.store.ContinuumStore</role>
      <role-hint>hibernate</role-hint>
      <implementation>org.codehaus.continuum.store.hibernate.HibernateContinuumStore</implementation>
      <requirements>
        <requirement>
          <role>org.codehaus.plexus.hibernate.HibernateSessionService</role>
        </requirement>
      </requirements>
    </component>
    <component>
      <role>org.codehaus.plexus.hibernate.HibernateService</role>
      <implementation>org.codehaus.plexus.hibernate.DefaultHibernateService</implementation>
      <configuration>
        <mapping>/hibernate-test.cfg.xml</mapping>
      </configuration>
    </component>
  </components>
</component-set>
