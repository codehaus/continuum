<component-set>
  <components>
    <component>
      <role>org.codehaus.continuum.Continuum</role>
      <implementation>org.codehaus.continuum.DefaultContinuum</implementation>
      <requirements>
        <requirement>
          <role>org.codehaus.continuum.builder.BuilderManager</role>
        </requirement>
        <requirement>
          <role>org.codehaus.continuum.buildcontroller.BuildController</role>
        </requirement>
        <requirement>
          <role>org.codehaus.continuum.buildqueue.BuildQueue</role>
        </requirement>
        <requirement>
          <role>org.codehaus.continuum.store.ContinuumStore</role>
        </requirement>
        <requirement>
          <role>org.codehaus.continuum.store.tx.StoreTransactionManager</role>
        </requirement>
        <requirement>
          <role>org.codehaus.continuum.scm.ContinuumScm</role>
        </requirement>
        <requirement>
          <role>org.codehaus.continuum.maven.MavenTool</role>
        </requirement>
      </requirements>
      <configuration>
        <working-directory>${plexus.home}/temp</working-directory>
      </configuration>
    </component>

    <component>
      <role>org.codehaus.continuum.builder.BuilderManager</role>
      <implementation>org.codehaus.continuum.builder.DefaultBuilderManager</implementation>
      <requirements>
        <requirement>
          <role>org.codehaus.continuum.store.ContinuumStore</role>
        </requirement>
        <requirement>
          <role>org.codehaus.continuum.builder.ContinuumBuilder</role>
          <field-name>builders</field-name>
        </requirement>
      </requirements>
    </component>

    <component>
      <role>org.codehaus.continuum.buildcontroller.BuildController</role>
      <implementation>org.codehaus.continuum.buildcontroller.DefaultBuildController</implementation>
      <requirements>
        <requirement>
          <role>org.codehaus.continuum.builder.BuilderManager</role>
        </requirement>
        <requirement>
          <role>org.codehaus.continuum.store.ContinuumStore</role>
        </requirement>
        <requirement>
          <role>org.codehaus.continuum.store.tx.StoreTransactionManager</role>
        </requirement>
        <requirement>
          <role>org.codehaus.continuum.notification.NotifierManager</role>
        </requirement>
        <requirement>
          <role>org.codehaus.continuum.scm.ContinuumScm</role>
        </requirement>
      </requirements>
    </component>

    <component>
      <role>org.codehaus.continuum.notification.NotifierManager</role>
      <implementation>org.codehaus.continuum.notification.DefaultNotifierManager</implementation>
      <requirements>
        <requirement>
          <role>org.codehaus.continuum.notification.ContinuumNotifier</role>
          <field-name>notifiers</field-name>
        </requirement>
      </requirements>
    </component>

    <component>
      <role>org.codehaus.continuum.scm.ContinuumScm</role>
      <implementation>org.codehaus.continuum.scm.DefaultContinuumScm</implementation>
      <requirements>
        <requirement>
          <role>org.apache.maven.scm.manager.ScmManager</role>
        </requirement>
      </requirements>
      <configuration>
        <!-- @TODO: change this to ${continuum.checkout} -->
<!--
        <checkout-directory>/tmp/continuum</checkout-directory>
-->
      </configuration>
    </component>

    <component>
      <role>org.codehaus.continuum.buildqueue.BuildQueue</role>
      <implementation>org.codehaus.continuum.buildqueue.SimpleBuildQueue</implementation>
    </component>

    <component>
      <role>org.codehaus.continuum.notification.ContinuumNotifier</role>
      <role-hint>console</role-hint>
      <implementation>org.codehaus.continuum.notification.console.ConsoleNotifier</implementation>
    </component>

    <component>
      <role>org.codehaus.continuum.store.ContinuumStore</role>
      <implementation>org.codehaus.continuum.store.memory.MemoryContinuumStore</implementation>
      <requirements>
        <requirement>
          <role>org.codehaus.continuum.store.tx.StoreTransactionManager</role>
        </requirement>
      </requirements>
    </component>
    <component>
      <role>org.codehaus.continuum.store.tx.StoreTransactionManager</role>
      <implementation>org.codehaus.continuum.store.memory.tx.MemoryStoreTransactionManager</implementation>
    </component>
    <component>
      <role>org.codehaus.continuum.store.ContinuumStore</role>
      <role-hint>memory</role-hint>
      <implementation>org.codehaus.continuum.store.memory.MemoryContinuumStore</implementation>
      <requirements>
        <requirement>
          <role>org.codehaus.continuum.store.tx.StoreTransactionManager</role>
          <role-hint>memory</role-hint>
        </requirement>
      </requirements>
    </component>
    <component>
      <role>org.codehaus.continuum.store.tx.StoreTransactionManager</role>
      <role-hint>memory</role-hint>
      <implementation>org.codehaus.continuum.store.memory.tx.MemoryStoreTransactionManager</implementation>
    </component>
  </components>
</component-set>
