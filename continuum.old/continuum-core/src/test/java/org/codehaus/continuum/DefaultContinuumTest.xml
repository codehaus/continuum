<plexus>
  <components>
    <component>
      <role>org.codehaus.plexus.continuum.Continuum</role>
      <implementation>org.codehaus.plexus.continuum.DefaultContinuum</implementation>
      <requirements>
        <requirement>org.codehaus.plexus.compiler.Compiler</requirement>
        <requirement>org.apache.maven.project.ProjectBuilder</requirement>
      </requirements>
      <configuration>
        <working-directory>${plexus.home}/continuum</working-directory>
        <build-interval>1</build-interval>
        <smtp-server>mail.maven.org</smtp-server>
        <reply-to>jason@maven.org</reply-to>
      </configuration>
    </component>
    <component>
      <role>org.codehaus.plexus.compiler.Compiler</role>
      <implementation>org.codehaus.plexus.compiler.javac.JavacCompiler</implementation>
    </component>
      <component>
      <role>org.apache.maven.project.ProjectBuilder</role>
      <implementation>org.apache.maven.project.DefaultProjectBuilder</implementation>
      <requirements>
        <requirement>org.apache.maven.model.ModelUnmarshaller</requirement>
        <requirement>org.apache.maven.model.ModelMarshaller</requirement>
        <requirement>org.apache.maven.artifact.Artifactory</requirement>
      </requirements>
    </component>
    <component>
      <role>org.apache.maven.model.ModelUnmarshaller</role>
      <implementation>org.apache.maven.model.DefaultModelUnmarshaller</implementation>
    </component>
    <component>
      <role>org.apache.maven.model.ModelMarshaller</role>
      <implementation>org.apache.maven.model.DefaultModelMarshaller</implementation>
    </component>
    <component>
      <role>org.apache.maven.artifact.Artifactory</role>
      <implementation>org.apache.maven.artifact.DefaultArtifactory</implementation>
    </component>
  </components>
</plexus>