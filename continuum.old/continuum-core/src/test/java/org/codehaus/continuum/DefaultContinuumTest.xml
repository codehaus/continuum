<plexus>
  <components>
    <component>
      <role>org.codehaus.plexus.continuum.Continuum</role>
      <implementation>org.codehaus.plexus.continuum.DefaultContinuum</implementation>
      <requirements>
        <requirement>org.codehaus.plexus.compiler.Compiler</requirement>
        <requirement>org.apache.maven.project.ProjectBuilder</requirement>
      </requirements>
      <configuration>
        <work-directory>${plexus.home}/continuum</work-directory>
        <build-interval>1</build-interval>
        <moms>
          <mom>${basedir}/src/test-input/project.xml</mom>
        </moms>
      </configuration>
    </component>
    <component>
      <role>org.codehaus.plexus.compiler.Compiler</role>
      <implementation>org.codehaus.plexus.compiler.ajc.AspectJCompiler</implementation>
    </component>
    <component>
      <role>org.apache.maven.project.ProjectBuilder</role>
      <implementation>org.apache.maven.project.DefaultProjectBuilder</implementation>
    </component>
    <component>
      <role>org.apache.maven.project.ModelUnmarshaller</role>
      <implementation>org.apache.maven.project.DefaultModelUnmarshaller</implementation>
    </component>
    <component>
      <role>org.apache.maven.project.ModelMarshaller</role>
      <implementation>org.apache.maven.project.DefaultModelMarshaller</implementation>
    </component>
  </components>
</plexus>