<component-set>
  <components>
    <component>
      <role>org.codehaus.continuum.maven.MavenTool</role>
      <implementation>org.codehaus.continuum.maven.DefaultMavenTool</implementation>
      <requirements>
        <requirement>
          <role>org.apache.maven.Maven</role>
        </requirement>
      </requirements>
      <configuration>
        <maven-home>${maven.home}</maven-home>
        <maven-home-local>${maven.home.local}</maven-home-local>
        <maven-repository>${maven.home.repository}</maven-repository>
      </configuration>
    </component>
  </components>
</component-set>
