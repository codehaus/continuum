<project default="help"
  xmlns:ant="jelly:ant"
  xmlns:maven="jelly:maven"
  >

  <goal name="help">
    <ant:echo>
To build continuum:
 $ maven continuum:build

To make eclipse project descriptors:
 $ maven continuum:eclipse
    </ant:echo>
  </goal>

  <goal name="continuum:build">
    <maven:reactor
      basedir="${basedir}"
      includes="parent/project.xml"
      goals="pom:install"/>

    <maven:reactor
      basedir="${basedir}"
      includes="*/project.xml"
      excludes="parent/project.xml"
      goals="jar:install"/>
  </goal>

  <goal name="continuum:eclipse">
    <maven:reactor
      basedir="${basedir}"
      includes="*/project.xml"
      excludes="parent/project.xml"
      goals="eclipse"/>
  </goal>

</project>
