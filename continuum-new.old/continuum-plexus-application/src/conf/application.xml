<application>

  <load-on-start>
    <component>
      <role>org.codehaus.continuum.Continuum</role>
    </component>
  </load-on-start>

  <resources>
    <jar-repository>${plexus.home}/lib</jar-repository>
  </resources>

  <services>
    <service>
      <id>servlet-container</id>
      <configuration>
        <webapps>
          <webapp>
            <path>${plexus.home}/lib/continuum-web-1.0-alpha-1-SNAPSHOT.jar</path>
            <context>/continuum</context>
          </webapp>
        </webapps>
      </configuration>
      </service>
  </services>

</application>
